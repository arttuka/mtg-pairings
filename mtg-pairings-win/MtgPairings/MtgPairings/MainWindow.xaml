<Window x:Class="MtgPairings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="654" Width="900">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="API key" Click="MenuItem_Click"/>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <ListBox Width="450"
                 ItemsSource="{Binding Tournaments}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Tracking}"/>
                            <Label Content="{Binding Tournament.SanctionNumber}"/>
                            <Label Content="{Binding Tournament.Name}"/>
                            <Label Content="{Binding Tournament.Date}" ContentStringFormat="dd.MM.yyyy"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="EventList" ItemsSource="{Binding Events}" DisplayMemberPath="EventText" Height="620" Width="450"/>
        </StackPanel>
    </DockPanel>
</Window>
